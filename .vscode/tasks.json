{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Composer:Install",
            "problemMatcher": [],
            "type": "shell",
            "command": "composer install"
        },
        {
            "label": "NPM:Install",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm i"
        },
        {
            "label": "App:Install",
            "problemMatcher": [],
            "type": "shell",
            "dependsOn": ["Composer:Install", "NPM:Install"]
        },
        {
            "label": "Laravel Optimize",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan optimize"
        },
        {
            "label": "Laravel Optimize - Clear",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan optimize:clear"
        },
        {
            "label": "Laravel Migrate",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan migrate"
        },
        {
            "label": "Laravel Migrate - Fresh then Seed",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan migrate:fresh --seed"
        },
        {
            "label": "Laravel Migrate - Refresh with Step",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan migrate:refresh --step=${input:step}"
        },
        {
            "label": "Laravel Migrate - Rollback",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan migrate:rollback"
        },
        {
            "label": "Ide Helper - Generate",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan ide-helper:generate"
        },
        {
            "label": "Telescope - Clear Entries",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan telescope:clear"
        },
        {
            "label": "Laravel Serve",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan serve",
            "presentation": {
                "group": "RUNAPP"
            }
        },
        {
            "label": "Laravel Serve - Shared",
            "problemMatcher": [],
            "type": "shell",
            "command": "php",
            "presentation": {
                "group": "RUNAPPSHARED"
            },
            "args": ["artisan", "serve", "--host=0.0.0.0"]
        },
        {
            "label": "Laravel Queue",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan queue:listen --memory=512 --timeout=3600",
            "presentation": {
                "group": "RUNAPP",
            }
        },
        {
            "label": "Laravel Queue - Shared",
            "problemMatcher": [],
            "type": "shell",
            "command": "php",
            "presentation": {
                "group": "RUNAPPSHARED",
            },
            "args": ["artisan", "queue:listen", "--host=0.0.0.0" , "--memory=512", "--timeout=3600"]
        },
        {
            "label": "Laravel NPM Run Dev",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm run dev",
            "presentation": {
                "group": "RUNAPP"
            }
        },
        {
            "label": "Laravel NPM Run Dev - Shared",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm",
            "presentation": {
                "group": "RUNAPPSHARED"
            },
            "args": ["run", "dev", "--", "--host=0.0.0.0"]
        },
        {
            "label": "Laravel Websocket",
            "problemMatcher": [],
            "type": "shell",
            "command": "php artisan websocket:start"
        },
        {
            "label": "Watch Intent",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm run transform-intent-enum",
            "presentation": {
                "group": "RUNAPP"
            }
        },
        {
            "label": "Watch Permission",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm run transform-permission-enum",
            "presentation": {
                "group": "RUNAPP"
            }
        },
        {
            "label": "App",
            "problemMatcher": [],
            "type": "shell",
            "dependsOn": [
                "Laravel Serve",
                "Laravel Queue",
                "Laravel NPM Run Dev"
                // "Laravel Websocket"
            ]
        },
        {
            "label": "App-Shared",
            "problemMatcher": [],
            "type": "shell",
            "dependsOn": ["Laravel Serve - Shared", "Laravel Queue - Shared", "Laravel NPM Run Dev - Shared"]
        },
        {
            "label": "NPM Run Build",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm run build"
        },
        // ----------------------------------------------------------------

        {
            "label": "Pint: Fix",
            "problemMatcher": [],
            "type": "shell",
            "command": "./vendor/bin/pint"
        },
        {
            "label": "Prettier: Fix",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm run prettier"
        },
        {
            "label": "Lint: Fix",
            "problemMatcher": [],
            "type": "shell",
            "command": "npm run lint"
        },
        {
            "label": "Run All Fix Commands",
            "type": "shell",
            "problemMatcher": [],
            "dependsOn": [
                "Pint: Fix",
                "Lint: Fix",
                "Prettier: Fix",
            ]
        },

        {
            "label": "Run Pest",
            "type": "shell",
            "problemMatcher": [],
            "command": ".\\vendor\\bin\\pest",
            "args": ["${input:pestFile}"]
        },
        {
            "label": "Run Verify Structure Test",
            "type": "shell",
            "problemMatcher": [],
            "command": ".\\vendor\\bin\\pest",
            "args": ["${input:verifyFile}"]
        }

        // ----------------------------------------------------------------
    ],
    "inputs": [
        {
            "id": "pestFile",
            "type": "promptString",
            "description": "Enter the file relative path to be tested (leave blank to run all tests)",
            "default": "tests\\Unit\\VerifyStandardProjectStructureTest.php",
        },
        {
            "id": "verifyFile",
            "type": "pickString",
            "description": "Choose the verify file",
            "options": [
                "tests\\Unit\\VerifyStandardProjectStructureTest.php",
                "tests\\Unit\\VerifyLocalizationImplementation.php"
            ]
        },
        {
            "id": "step",
            "type": "promptString",
            "description": "Enter the step",
        }
    ]
}
